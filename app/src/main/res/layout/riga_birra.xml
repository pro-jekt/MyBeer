<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/birra_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textNome"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
            android:text="@string/birra_produttore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textProduttore"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textNome" app:layout_constraintStart_toStartOf="@+id/textNome"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="76dp"
            android:layout_height="64dp" app:srcCompat="@drawable/birra"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toStartOf="@+id/textNome" android:layout_marginEnd="22dp"/>
</android.support.constraint.ConstraintLayout>